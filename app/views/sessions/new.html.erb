<h1>Log In</h1>

<%= form_tag sessions_path, method: :post do%>
    <p>
        <%=label_tag :email%>
        <%= email_field_tag :email, nil, required: true %>
    </p>

    <p>
        <%=label_tag :password%>
        <%= password_field_tag :password, nil, required: true %>
    </p>
    <p>
        <%= label_tag :remember_me %>
        <%= check_box_tag :remember_me %>
    </p>
    <p>
        <%= submit_tag 'Log In'%>
    </p>
<% end %>
<%= link_to  'Sign Up!', sign_up_path%>