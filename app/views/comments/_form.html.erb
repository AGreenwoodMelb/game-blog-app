<div class="new-comment-container">
    <h3>Post a Comment</h3>
    <%= form_with model:[@post,@comment] do |f|%>
        <p>
            <%= f.label :author_name%> <br/>
            <%= f.text_field :author_name%>
        </p>
        <p>
            <%= f.label :body %> <br/>
            <%= f.text_area :body%>
        </p>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
</div>